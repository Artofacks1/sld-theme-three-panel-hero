{{ 'section-service-features.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="service-features service-features-{{ section.id }} section-{{ section.id }}-padding color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width">
    {%- if section.settings.show_title and section.settings.section_title != blank -%}
      <div class="service-features__title-wrapper">
        <h2 class="service-features__title">
          {{ section.settings.section_title | escape }}
        </h2>
      </div>
    {%- endif -%}

    <div class="service-features__grid">
      {%- for block in section.blocks limit: 10 -%}
        {%- liquid
          assign feature_title = block.settings.title | default: 'Feature Title'
          assign feature_subtitle = block.settings.subtitle | default: 'Feature Subtitle'
          assign feature_link = block.settings.link
          assign icon_type = block.settings.icon_type
          assign custom_icon = block.settings.custom_icon
        -%}
        
        <div class="service-features__card" {{ block.shopify_attributes }}>
          {%- if feature_link != blank -%}
            <a href="{{ feature_link }}" class="service-features__card-link" aria-label="{{ feature_title | escape }}">
          {%- endif -%}
          
          <div class="service-features__card-content">
            {%- if icon_type != blank or custom_icon != blank -%}
              <div class="service-features__icon-wrapper">
                {%- if custom_icon != blank -%}
                  <div class="service-features__icon-image">
                    <img
                      src="{{ custom_icon | image_url: width: 128 }}"
                      srcset="{{ custom_icon | image_url: width: 128 }} 1x, {{ custom_icon | image_url: width: 256 }} 2x"
                      alt="{{ feature_title | escape }} icon"
                      width="64"
                      height="64"
                      loading="lazy"
                    >
                  </div>
                {%- elsif icon_type != blank -%}
                  <div class="service-features__icon-svg">
                    {%- case icon_type -%}
                      {%- when 'truck' -%}
                        {% render 'icon-service-truck' %}
                      {%- when 'shield' -%}
                        {% render 'icon-service-shield' %}
                      {%- when 'palette' -%}
                        {% render 'icon-service-palette' %}
                    {%- endcase -%}
                  </div>
                {%- endif -%}
              </div>
            {%- endif -%}
            
            {%- if feature_title != blank -%}
              <h3 class="service-features__title-text">
                {{ feature_title | upcase | escape }}
              </h3>
            {%- endif -%}
            
            {%- if feature_subtitle != blank -%}
              <p class="service-features__subtitle">
                {{ feature_subtitle | upcase | escape }}
              </p>
            {%- endif -%}
          </div>
          
          {%- if feature_link != blank -%}
            </a>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
    
    <div class="service-features__divider"></div>
  </div>
</div>

{% schema %}
{
  "name": "Service Features",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_title",
      "label": "Show section title",
      "default": false
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Section title",
      "default": "Service Features"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "accent-1",
          "label": "t:sections.all.colors.accent_1.label"
        },
        {
          "value": "accent-2",
          "label": "t:sections.all.colors.accent_2.label"
        },
        {
          "value": "background-1",
          "label": "t:sections.all.colors.background_1.label"
        },
        {
          "value": "background-2",
          "label": "t:sections.all.colors.background_2.label"
        },
        {
          "value": "inverse",
          "label": "t:sections.all.colors.inverse.label"
        }
      ],
      "default": "background-1",
      "label": "t:sections.all.colors.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 64
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 64
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "limit": 10,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Feature title",
          "default": "FEATURE TITLE"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Feature subtitle",
          "default": "Feature subtitle text"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link URL",
          "info": "Optional: Link the entire feature card to a URL"
        },
        {
          "type": "select",
          "id": "icon_type",
          "label": "Icon type",
          "options": [
            {
              "value": "",
              "label": "None"
            },
            {
              "value": "truck",
              "label": "Truck (Delivery)"
            },
            {
              "value": "shield",
              "label": "Shield (Quality)"
            },
            {
              "value": "palette",
              "label": "Palette (Custom Design)"
            }
          ],
          "default": ""
        },
        {
          "type": "image_picker",
          "id": "custom_icon",
          "label": "Custom icon image",
          "info": "Upload a custom icon. If provided, this will override the icon type selection."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Service Features",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "title": "NATIONWIDE DELIVERY",
            "subtitle": "Fast shipping across USA",
            "icon_type": "truck"
          }
        },
        {
          "type": "feature",
          "settings": {
            "title": "PREMIUM QUALITY",
            "subtitle": "5-year durability guarantee",
            "icon_type": "shield"
          }
        },
        {
          "type": "feature",
          "settings": {
            "title": "CUSTOM DESIGN",
            "subtitle": "Expert design services",
            "icon_type": "palette"
          }
        }
      ]
    }
  ]
}
{% endschema %}

